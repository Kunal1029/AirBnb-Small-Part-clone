<% layout("layouts/boilerplate.ejs") %>

<body>
    <h1 class="bg-black">Edit</h1>
    <form action="/updating/<%=e._id%>?_method=PUT" method="POST">
        <input type="text" name="listing[title]" value="<%=e.title%>" placeholder="title"><br>
        <textarea type="text" name="listing[description]"  placeholder="description"><%=e.description%></textarea><br>
        <input type="text" name="listing[image]" value="<%=e.image%>" placeholder="image"><br>
        <input type="number" name="listing[price]" value="<%=e.price%>" placeholder="price"><br>
        <input type="text" name="listing[location]" value="<%=e.location%>" placeholder="location"><br>
        <input type="text" name="listing[country]" value="<%=e.country%>" placeholder="country"><br>
        <button>Submit</button>
    </form>
</body>
